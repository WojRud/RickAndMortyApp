<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appAuthorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Author: Wojciech Rudol"
        app:layout_constraintBottom_toTopOf="@+id/authorContactText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/authorContactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: wojciechrudol@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/copyAuthorMailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy E-Mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorContactText" />


</androidx.constraintlayout.widget.ConstraintLayout>