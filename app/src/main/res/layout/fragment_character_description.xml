<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".characterDescription.CharacterDescriptionFragment">

    <ImageView
        android:id="@+id/CharacterImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CharacterImage"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textName"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="Name:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textGetName"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="Rick Sanchez" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="Status:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textGetStatus"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="Alive" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSpecies"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="Species:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textGetSpecies"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="Human" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGender"
                android:layout_width="96dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:text="Gender:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textGetGender"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:hint="Male" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>